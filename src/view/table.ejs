

<%if(locals.lastVisit){%>
    <div class="alert">
Your Last Visit was on: <%= locals.lastVisit %>
    </div>
<%}%>




<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Product</th>
            <th>Price</th>
            <th>Actions</th>
            
        </tr>
    </thead>
    <tbody>
        <%products.forEach(p=>{ %>
            <tr>
                <td> 
            <%=p.id%>  
        </td>
    <td>      
            <%=p.name%>      
        </td>
    <td>  
            <%=p.desc%>       
        </td> 
        <td><img src="<%= p.image %>"  style="max-width: 50px; max-height: 50px;"></td>
 
        <td> <%=p.price%> </td>    
        
        <td><a href="/update/<%=p.id%>" class="btn">Update</a>    
        <a href="/delete/<%=p.id%>" class="btn btn-danger">Delete</a></td> 
           
                    </tr>
       <% })%>
    </tbody>
</table>